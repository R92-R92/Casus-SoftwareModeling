<Window x:Class="StudioManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudioManager"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Milo's Document and Media Assistant / Milo's Digital Management App"
        Height="800" Width="1100" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- NAVIGATION -->
        <Border Background="#F5F5F5" CornerRadius="10" Margin="10" Padding="10" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- LOGO -->
                <Border Grid.Row="0" Height="100" Background="White" CornerRadius="5" Margin="0,0,0,20">
                    <TextBlock Text="Logo"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"/>
                </Border>

                <!-- Navigatieknoppen -->
                <StackPanel Grid.Row="1">
                    <Button Content="Dashboard" Margin="0,5" Padding="10" Click="DashboardButton_Click"/>
                    <Button Content="Projects" Margin="0,5" Padding="10" Click="ProjectsButton_Click"/>
                    <Button Content="Concepts" Margin="0,5" Padding="10" Click="ConceptsButton_Click"/>
                    <Button Content="Shoots" Margin="0,5" Padding="10" Click="ShootsButton_Click"/>
                    <Button Content="Props" Margin="0,5" Padding="10" Click="PropsButton_Click"/>
                    <Button Content="Contacts" Margin="0,5" Padding="10" Click="ContactsButton_Click"/>
                    <Button Content="Addresses" Margin="0,5" Padding="10" Click="AddressesButton_Click"/>
                </StackPanel>

                <!-- Change Location -->
                <Button Grid.Row="2" Content="Change Location" Margin="0,10,0,0" Padding="10" Click="ChangeLocation_Click"/>
            </Grid>
        </Border>


        <!-- RIGHT SIDE -->
        <Border Grid.Column="1" Background="#F5F5F5" CornerRadius="10" Margin="10" Padding="10">
            <Grid>

                <!-- DASHBOARD VIEW -->
                <Grid x:Name="DashboardView" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- CONCEPT OVERVIEW PANE -->
                    <Border Grid.Row="0" Background="#E0E0E0" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Concept Overview" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                            <!-- Zoekveld + New Concept -->
                            <Grid Grid.Row="1" Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Zoekveld -->
                                <Grid Grid.Column="0" Width="200" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <TextBox x:Name="DashboardConceptSearchTextBox" VerticalContentAlignment="Center" Padding="2,0,0,0" TextChanged="SearchBox_DashboardConcepts"/>
                                    <TextBlock x:Name="DashboardConceptSearchPlaceholder" Text="Search concepts..." Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Visible"/>
                                </Grid>                              
                            </Grid>

                            <!-- Tabel -->
                            <DataGrid x:Name="DashboardConceptsDataGrid" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" ScrollViewer.CanContentScroll="False" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                                    <DataGridTextColumn Header="Model" Binding="{Binding ModelText}" Width="*"/>
                                    <DataGridTextColumn Header="Props" Binding="{Binding PropsText}" Width="*"/>
                                    <DataGridTextColumn Header="Shoot Address" Binding="{Binding Location}" Width="*"/>
                                    <DataGridTextColumn Header="Shoot Date" Binding="{Binding ShootDateText}" Width="*"/>
                                    <DataGridTemplateColumn Header="Edit" Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Edit" Width="50" Margin="2" Click="EditConcept_Click"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Del" Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Delete" Width="60" Margin="2" Click="DeleteConcept_Click"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>


                    <!-- NOTSURE -->
                    <Border Grid.Row="1" Background="#E0E0E0" CornerRadius="5" Padding="10">
                        <TextBlock Text="NOTSUREYET" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    </Border>
                </Grid>


                <!-- PROJECTS -->
                <Grid x:Name="ProjectsView" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="0.6*"/>
                    </Grid.RowDefinitions>

                    <!-- Project Overview Label -->
                    <TextBlock Grid.Row="0" Text="Project Overview" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                    <!-- Search Field (left) + New Project Button (right) -->
                    <Grid Grid.Row="1" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Field with Placeholder Simulation -->
                        <Grid Grid.Column="0" Width="200" Height="25" Margin="0,0,10,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBox x:Name="ProjectsSearchTextBox" VerticalContentAlignment="Center" Padding="2,0,0,0" TextChanged="SearchBox_Projects"/>
                            <TextBlock x:Name="SearchPlaceholder" Text="Search projects..." Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Visible"/>
                        </Grid>

                        <!-- New Project Button -->
                        <Button Grid.Column="1" Content="New Project" Width="100" HorizontalAlignment="Right"/>
                    </Grid>

                 

                    <!-- Project Overview Table -->
                    <DataGrid x:Name="ProjectsDataGrid" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" RowHeaderWidth="0" Margin="0,0,0,10" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Deadline" Binding="{Binding Description}" Width="2*"/>
                            <DataGridTextColumn Header="Concept" Binding="{Binding Concept}" Width="*"/>
                            <DataGridTemplateColumn Header="Edit" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Edit" Width="50" Margin="2"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Del" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Delete" Width="60" Margin="2"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Project Details Label -->
                    <TextBlock Grid.Row="3" Text="Project Details" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                    <!-- Project Details -->
                    <Border Grid.Row="4" BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="- Name: [Project Name]"/>
                            <TextBlock Text="- Deadline: [Date]"/>
                            <TextBlock Text="- Linked Concepts: [Concept A, Concept B]"/>
                            <TextBlock Text="- Description: [Detailed description]"/>
                            <TextBlock Text="- Notes: [Notes about the project]"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- SHOOTS -->
                <Grid x:Name="ShootsView" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="0.6*"/>
                    </Grid.RowDefinitions>

                    <!-- Shoot Overview Label -->
                    <TextBlock Grid.Row="0" Text="Shoot Overview" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                    <!-- Search Field (left) + New Shoot Button (right) -->
                    <Grid Grid.Row="1" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Field with Placeholder Simulation -->
                        <Grid Grid.Column="0" Width="200" Height="25" Margin="0,0,10,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBox x:Name="ShootsSearchTextBox" VerticalContentAlignment="Center" Padding="2,0,0,0" TextChanged="SearchBox_Shoots"/>
                            <TextBlock x:Name="ShootsSearchPlaceholder" Text="Search shoots..." Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Visible"/>
                        </Grid>

                        <!-- New Shoot Button -->
                        <Button Grid.Column="1" Content="New Shoot" Width="100" HorizontalAlignment="Right"/>
                    </Grid>



                    <!-- Shoot Overview Table -->
                    <DataGrid x:Name="ShootsDataGrid" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" RowHeaderWidth="0" Margin="0,0,0,10" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="*"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                            <DataGridTextColumn Header="Concepts" Binding="{Binding Concepts}" Width="2*"/>
                            <DataGridTemplateColumn Header="Edit" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Edit" Width="50" Margin="2"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Del" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Delete" Width="60" Margin="2"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Shoot Details Label -->
                    <TextBlock Grid.Row="3" Text="Shoot Details" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                    <!-- Shoot Details -->
                    <Border Grid.Row="4" BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="- Date: [Shoot Date]"/>
                            <TextBlock Text="- Location: [Shoot Location]"/>
                            <TextBlock Text="- Distance: [Distance in km]"/>
                            <TextBlock Text="- Upload Contract: [Link or Filename]"/>
                            <TextBlock Text="- Contract Signed: [Yes/No]"/>
                            <TextBlock Text="- Linked Concepts: [Concept A, Concept B]"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- CONCEPTS -->
                <Grid x:Name="ConceptsView" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="0.6*"/>
                    </Grid.RowDefinitions>

                    <!-- Concept Overview Label -->
                    <TextBlock Grid.Row="0" Text="Concept Overview" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                    <!-- Search Field (left) + New Concept Button (right) -->
                    <Grid Grid.Row="1" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Field with Placeholder Simulation -->
                        <Grid Grid.Column="0" Width="200" Height="25" Margin="0,0,10,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBox x:Name="ConceptsSearchTextBox" VerticalContentAlignment="Center" Padding="2,0,0,0" TextChanged="SearchBox_Concepts"/>
                            <TextBlock x:Name="ConceptsSearchPlaceholder" Text="Search concepts..." Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Visible"/>
                        </Grid>

                        <!-- New Concept Button -->
                        <Button Grid.Column="1" Content="New Concept" Width="100" HorizontalAlignment="Right" Click="NewConceptButton_Click"/>
                    </Grid>

                    <!-- Concept Overview Table -->
                    <DataGrid x:Name="ConceptsDataGrid" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" RowHeaderWidth="0" Margin="0,0,0,10" ScrollViewer.CanContentScroll="False" SelectionChanged="ConceptsDataGrid_SelectionChanged" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                            <DataGridTextColumn Header="Model" Binding="{Binding ModelText}" Width="*"/>
                            <DataGridTextColumn Header="Props" Binding="{Binding PropsText}" Width="*"/>
                            <DataGridTextColumn Header="Shoot Address" Binding="{Binding Location}" Width="*"/>
                            <DataGridTextColumn Header="Shoot Date" Binding="{Binding ShootDateText}" Width="*"/>
                            <DataGridTemplateColumn Header="Edit" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Edit" Width="50" Margin="2" Click="EditConcept_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Del" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Delete" Width="60" Margin="2" Click="DeleteConcept_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>


                    <!-- Concept Details Label -->
                    <TextBlock Grid.Row="3" Text="Concept Details" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                    <!-- Concept Details -->
                    <Border Grid.Row="4" BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="DetailName" Grid.Row="0" Grid.Column="0" Margin="0,2"/>
                            <TextBlock x:Name="DetailDescription" Grid.Row="0" Grid.Column="1" Margin="10,2"/>
                            <TextBlock x:Name="DetailModels" Grid.Row="1" Grid.Column="0" Margin="0,2"/>
                            <TextBlock x:Name="DetailAddress" Grid.Row="1" Grid.Column="1" Margin="10,2"/>
                            <TextBlock x:Name="DetailProps" Grid.Row="2" Grid.Column="0" Margin="0,2"/>
                            <TextBlock x:Name="DetailShoot" Grid.Row="2" Grid.Column="1" Margin="10,2"/>
                            <TextBlock x:Name="DetailShootAddress" Grid.Row="3" Grid.Column="0" Margin="0,2"/>


                            <!-- Sketch Preview -->
                            <Border x:Name="DetailSketchBorder" Grid.Row="0" Grid.RowSpan="4" Grid.Column="2" 
        Margin="10,0,0,0" BorderThickness="1" BorderBrush="DarkGray" 
        Width="100" Height="100" Visibility="Collapsed">
                                <Image x:Name="DetailSketchPreviewImage" Stretch="Uniform" MouseLeftButtonUp="DetailSketchPreviewImage_MouseLeftButtonUp"/>
                            </Border>

                            <!-- Picture Preview -->
                            <Border x:Name="DetailPictureBorder" Grid.Row="0" Grid.RowSpan="4" Grid.Column="3"
        Margin="10,0,0,0" BorderThickness="1" BorderBrush="DarkGray"
        Width="150" Height="100" Visibility="Collapsed">
                                <Grid>
                                    <Image x:Name="DetailPicturePreviewImage" Stretch="Uniform" MouseLeftButtonUp="DetailPicturePreviewImage_MouseLeftButtonUp"/>
                                    <Button x:Name="DetailPrevPictureButton" Content="◄" Width="25" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Click="DetailPrevPicture_Click" Visibility="Collapsed" Background="Transparent" BorderThickness="0" Foreground="Black" FontWeight="Bold" FontSize="16" Cursor="Hand"/>
                                    <Button x:Name="DetailNextPictureButton" Content="►" Width="25" Height="25" HorizontalAlignment="Right" VerticalAlignment="Center" Click="DetailNextPicture_Click" Visibility="Collapsed" Background="Transparent" BorderThickness="0" Foreground="Black" FontWeight="Bold" FontSize="16" Cursor="Hand"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                </Grid>

                <!-- Picture preview overlay -->
                <Grid x:Name="DetailPictureOverlay" Visibility="Collapsed" Background="#AAFFFFFF" Grid.RowSpan="5" Grid.ColumnSpan="4" Panel.ZIndex="100">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#F5F5F5" Margin="40">
                        <Image x:Name="OverlayPictureImage" Stretch="Uniform" Margin="10"/>
                        <Button Content="◄" Width="40" Height="40" Click="OverlayPrev_Click"
                HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"
                FontSize="20" FontWeight="Bold" Background="Transparent" Foreground="Black" BorderBrush="Transparent"/>
                        <Button Content="►" Width="40" Height="40" Click="OverlayNext_Click"
                HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"
                FontSize="20" FontWeight="Bold" Background="Transparent" Foreground="Black" BorderBrush="Transparent"/>
                        <Button Content="X" Width="30" Height="30" Click="OverlayClose_Click"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                FontSize="14" FontWeight="Bold" Background="Transparent" Foreground="Black" BorderBrush="Transparent"/>
                    </Grid>
                </Grid>

                <!-- Sketch Overlay Preview -->
                <Grid x:Name="DetailSketchOverlay" Visibility="Collapsed" Background="#AAFFFFFF" Grid.RowSpan="5" Grid.ColumnSpan="4" Panel.ZIndex="101">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#F5F5F5" Margin="40">
                        <Image x:Name="OverlaySketchImage" Stretch="Uniform" Margin="10"/>
                        <Button Content="X" Width="30" Height="30" Click="OverlaySketchClose_Click"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                FontSize="14" FontWeight="Bold" Background="Transparent" Foreground="Black" BorderBrush="Transparent"/>
                    </Grid>
                </Grid>


                <!-- PROPS -->
                <Grid x:Name="PropsView" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="0.6*"/>
                    </Grid.RowDefinitions>

                    <!-- Prop Overview Label -->
                    <TextBlock Grid.Row="0" Text="Prop Overview" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                    <!-- Search Field (left) + New Prop Button (right) -->
                    <Grid Grid.Row="1" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Field with Placeholder Simulation -->
                        <Grid Grid.Column="0" Width="200" Height="25" Margin="0,0,10,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBox x:Name="PropsSearchTextBox" VerticalContentAlignment="Center" Padding="2,0,0,0" TextChanged="SearchBox_Props"/>
                            <TextBlock x:Name="PropsSearchPlaceholder" Text="Search props..." Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Visible"/>
                        </Grid>

                        <!-- New Prop Button -->
                        <Button Grid.Column="1" Content="New Prop" Width="100" HorizontalAlignment="Right" Click="NewPropButton_Click"/>
                    </Grid>

                    <!-- Prop Overview Table -->
                    <DataGrid x:Name="PropsDataGrid" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" RowHeaderWidth="0" Margin="0,0,0,10" SelectionChanged="PropsDataGrid_SelectionChanged" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Available" Binding="{Binding IsAvailable}" Width="Auto"/>
                            <DataGridTemplateColumn Header="Edit" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Edit" Width="50" Margin="2" Click="EditProp_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Del" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Delete" Width="60" Margin="2" Click="DeleteProp_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Prop Details Label -->
                    <TextBlock Grid.Row="3" Text="Prop Details" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                    <!-- Prop Details -->
                    <Border Grid.Row="4" BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Name -->
                            <TextBlock x:Name="DetailPropName" Grid.Row="0" Grid.Column="0" Margin="0,2"/>
                            <!-- Description -->
                            <TextBlock x:Name="DetailPropDescription" Grid.Row="0" Grid.Column="1" Margin="10,2"/>
                            <!-- Available -->
                            <TextBlock x:Name="DetailPropAvailable" Grid.Row="1" Grid.Column="0" Margin="0,2"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- CONTACTS -->
                <Grid x:Name="ContactsView" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="0.6*"/>
                    </Grid.RowDefinitions>

                    <!-- Contact Overview Label -->
                    <TextBlock Grid.Row="0" Text="Contact Overview" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                    <!-- Search Field (left) + New Contact Button (right) -->
                    <Grid Grid.Row="1" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Field with Placeholder Simulation -->
                        <Grid Grid.Column="0" Width="250" Height="25" Margin="0,0,10,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBox x:Name="ContactsSearchTextBox" VerticalContentAlignment="Center" Padding="2,0,0,0" TextChanged="SearchBox_Contacts"/>
                            <TextBlock x:Name="ContactsSearchPlaceholder" Text="Search contacts..." Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Visible"/>
                        </Grid>

                        <!-- New Contact Button -->
                        <Button Grid.Column="1" Content="New Contact" Width="100" HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Contact Overview Table -->
                    <DataGrid x:Name="ContactsDataGrid" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" RowHeaderWidth="0" Margin="0,0,0,10" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                            <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*"/>
                            <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="2*"/>
                            <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"/>
                            <DataGridTextColumn Header="Pay" Binding="{Binding Pay}" Width="*"/>
                            <DataGridTemplateColumn Header="Edit" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Edit" Width="50" Margin="2"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Del" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Delete" Width="60" Margin="2"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Contact Details Label -->
                    <TextBlock Grid.Row="3" Text="Contact Details" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                    <!-- Contact Details -->
