<Window x:Class="StudioManager.ConceptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudioManager"
        mc:Ignorable="d"
        Title="ConceptWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Beschrijving" FontWeight="Bold"/>
            <TextBox Name="DescriptionTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top" >
          
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Adres:" Width="100"/>
                <ComboBox Name="AddressComboBox" Width="400" ItemsSource="{Binding Addressen.FullAddress}"/>
            </StackPanel>

          
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Sketch bestand:" Width="100"/>
                <TextBox Name="SketchPathTextBox" Width="300"/>
                <Button Content="Bladeren..." Width="80" Margin="5,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Foto bestand:" Width="100"/>
                <TextBox Name="PicturePathTextBox" Width="300"/>
                <Button Content="Bladeren..." Width="80" Margin="5,0,0,0"/>
            </StackPanel>

         
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Model(len):" Width="100"/>
                <ListBox Name="ModelsListBox" Width="300" Height="60"/>
                <Button Content="Toevoegen" Width="80" Margin="5,0,0,0"/>
            </StackPanel>

            
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Props:" Width="100"/>
                <ListBox Name="PropsListBox" Width="300" Height="60"/>
                <Button Content="Toevoegen" Width="80" Margin="5,0,0,0"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Shoot:" Width="100"/>
                <TextBox Name="ShootTextBox" Width="300"/>
                <Button Content="Opslaan" Width="80" Margin="5,0,0,0"/>
            </StackPanel>
        </StackPanel>

       
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Annuleren" Width="100" Margin="0,0,10,0"/>
            <Button Content="Bevestigen" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
